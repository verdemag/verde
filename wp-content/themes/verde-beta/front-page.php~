<?php get_header(); ?>
<?php
$pages = get_pages(array('sort_column' => 'menu_order',
                         'number' => 6));
foreach ($pages as $page) : ?>
<div class="container_12 page" id="page<?php echo $page->menu_order ?>">
  <?php if($page->page_template == 'default') : ?>
  <div class="grid_12">
    <?php echo $page->post_content; ?>
  </div>
  <?php elseif($page->page_template == 'psidebar.php') : ?>
  <div class="grid_9">
    <?php echo $page->post_content; ?>
  </div>
  <?php echo file_get_contents(get_template_directory_uri() . '/sidebar.php'); ?>
  <?php else : ?>
  <p><?php echo $page->page_template ?></p>
  <?php endif; ?>
</div>
<?php endforeach; ?>

<div class="container_12 page" id="about">
	<div class="row">
		<?php echo get_page_by_title('About')->post_content; ?>
		<div class="grid_4 omega content">
			<h1>Authors</h1>
			<?php wp_list_authors(array('show_fullname' => true, 'hide_empty' => false)); ?>
		</div>
	</div>
</div>

<?php get_footer(); ?>
